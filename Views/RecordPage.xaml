<Page x:Class="Project_FREAK.Views.RecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Left Side: Graphs (now spans both rows) -->
        <Grid Grid.Column="0" Grid.RowSpan="2" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#252525" 
                    CornerRadius="10" 
                    Margin="2"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch">
                <TextBlock Text="Graph 1 Placeholder" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="16"/>
            </Border>

            <Border Grid.Row="1" 
                    Background="#252525" 
                    CornerRadius="10" 
                    Margin="2"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch">
                <TextBlock Text="Graph 2 Placeholder" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="16"/>
            </Border>
        </Grid>

        <!-- Right Side: Video Playback -->
        <Border Grid.Column="1" 
                Grid.Row="0" 
                Background="Black" 
                CornerRadius="10" 
                Margin="2"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch">
            <TextBlock Text="Video Playback" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Right Side: Control Panel -->
        <Border Grid.Column="1" 
                Grid.Row="1" 
                Background="#333" 
                CornerRadius="10" 
                Margin="2"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Control Panel" 
                           FontSize="20"
                           Foreground="White" 
                           TextAlignment="Center" 
                           Margin="0,0,0,2"/>

                <!-- 2x2 Button Grid -->
                <Grid Grid.Row="1" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Buttons with scaling text -->
                    <Button Grid.Row="0" Grid.Column="0" 
                            Background="Green" 
                            Margin="1"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Start" Foreground="White" Margin="2"/>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="0" Grid.Column="1" 
                            Background="Orange" 
                            Margin="1"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Arm" Foreground="White" Margin="2"/>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="0" 
                            Background="Blue" 
                            Margin="1"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Click="SensorCheckButton_Click">
                            
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Sensor Check" Foreground="White" Margin="2"/>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="1" 
                            Background="Red" 
                            Margin="1"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="Save" Foreground="White" Margin="2"/>
                        </Viewbox>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
