<Page x:Class="Project_FREAK.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_FREAK.Views"
      mc:Ignorable="d" 
      Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Project FREAK" 
                   FontSize="48" 
                   FontWeight="SemiBold" 
                   Foreground="White" 
                   FontFamily="Segoe UI, Poppins"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Replay Button -->
            <Button Content="Replay Launch"
                    FontSize="28"
                    FontWeight="Bold"
                    Width="400"
                    Height="100"
                    Background="#3B82F6"
                    Foreground="White"
                    FontFamily="Segoe UI, Poppins"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ReplayButton_Click"
                    Margin="0,20,0,20">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Record Button -->
            <Button Content="Record New Launch"
                    FontSize="28"
                    FontWeight="Bold"
                    Width="400"
                    Height="100"
                    Background="Red"
                    Foreground="White"
                    FontFamily="Segoe UI, Poppins"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="RecordButton_Click"
                    Margin="0,20,0,20">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                                <Setter Property="Background" Value="#C40000"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Page>
