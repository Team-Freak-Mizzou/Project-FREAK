<Page x:Class="Project_FREAK.Views.ReplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Left Side: Graphs -->
        <Grid Grid.Column="0" Grid.RowSpan="2" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#252525" 
                    CornerRadius="10" 
                    Margin="2"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch">
                <TextBlock Text="Graph 1 Placeholder" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="16"/>
            </Border>

            <Border Grid.Row="1" 
                    Background="#252525" 
                    CornerRadius="10" 
                    Margin="2"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch">
                <TextBlock Text="Graph 2 Placeholder" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="16"/>
            </Border>
        </Grid>

        <!-- Right Side: Video Playback -->
        <Border Grid.Column="1" 
                Grid.Row="0" 
                Background="Black" 
                CornerRadius="10" 
                Margin="2"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch">
            <TextBlock Text="Video Playback" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Video Controls Panel -->
        <Border Grid.Column="1" 
                Grid.Row="1" 
                Background="#333" 
                CornerRadius="10" 
                Margin="2"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Video Controls" 
                           FontSize="20"
                           Foreground="White" 
                           TextAlignment="Center" 
                           Margin="0,0,0,2"/>

                <!-- Video Control Grid -->
                <Grid Grid.Row="1" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Play/Pause Button -->
                    <Button Grid.Column="0" 
                            Background="#4CAF50" 
                            Margin="2"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <Viewbox Stretch="Uniform">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▶" Foreground="White" Margin="2"/>
                                <TextBlock Text="⏸" Foreground="White" Margin="2"/>
                            </StackPanel>
                        </Viewbox>
                    </Button>

                    <!-- Restart Button -->
                    <Button Grid.Column="1" 
                            Background="#2196F3" 
                            Margin="2"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="↻" Foreground="White" Margin="2"/>
                        </Viewbox>
                    </Button>

                    <!-- Speed Controls -->
                    <Button Grid.Column="2" 
                            Background="#9C27B0" 
                            Margin="2"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <Viewbox Stretch="Uniform">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="1x" Foreground="White" Margin="2"/>
                                <TextBlock Text="2x" Foreground="White" Margin="2"/>
                            </StackPanel>
                        </Viewbox>
                    </Button>

                    <!-- Fullscreen Toggle -->
                    <Button Grid.Column="3" 
                            Background="#FF5722" 
                            Margin="2"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <Viewbox Stretch="Uniform">
                            <TextBlock Text="⤢" Foreground="White" Margin="2"/>
                        </Viewbox>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>