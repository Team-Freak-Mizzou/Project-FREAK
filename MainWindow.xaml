<Window x:Class="Project_FREAK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_FREAK"
        mc:Ignorable="d"
        Title="FREAK" Height="900" Width="1600">
    <Grid>
        <DockPanel>
            <!-- Persistent Menu that stays even when you navigate to a different page -->
            <Menu x:Name="MainMenu" DockPanel.Dock="Top" Background="DarkGray">
                <!-- Navigation Menu Items -->
                <MenuItem x:Name="NavigationMenu" Header="Navigation">
                    <MenuItem x:Name="HomeMenuItem" Header="Home" Click="HomeMenuItem_Click" IsCheckable="True"/>
                    <MenuItem x:Name="RecordMenuItem" Header="Record" Click="RecordMenuItem_Click" IsCheckable="True"/>
                    <MenuItem x:Name="ReplayMenuItem" Header="Replay" Click="ReplayMenuItem_Click" IsCheckable="True"/>
                </MenuItem>
                <MenuItem Header="Settings" Click="SettingsMenuItem_Click"/>
            </Menu>
            <!-- Frame for Navigation -->
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>